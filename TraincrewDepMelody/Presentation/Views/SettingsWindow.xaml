<Window x:Class="TraincrewDepMelody.Presentation.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="設定" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- プロファイル選択 -->
        <GroupBox Header="プロファイル設定" Grid.Row="1" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock Text="音声プロファイル:" Margin="0,0,0,5"/>
                <ComboBox x:Name="ProfileComboBox" Height="25" Margin="0,0,0,10"/>
                <Button Content="プロファイル再読み込み"
                        Click="OnReloadProfileClick"
                        Height="30"
                        Margin="0,0,0,5"/>
                <Button Content="プロファイルフォルダを開く"
                        Click="OnOpenProfileFolderClick"
                        Height="30"/>
            </StackPanel>
        </GroupBox>

        <!-- 音量設定 -->
        <GroupBox Header="音量設定" Grid.Row="2" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="VolumeSlider"
                            Grid.Column="0"
                            Minimum="0" Maximum="100"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            ValueChanged="OnVolumeChanged"
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="VolumeLabel"
                               Grid.Column="1"
                               Text="80%"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- ウィンドウ設定 -->
        <GroupBox Header="ウィンドウ設定" Grid.Row="3" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock Text="最前面表示:" Margin="0,0,0,5"/>
                <ComboBox x:Name="TopmostComboBox" Height="25">
                    <ComboBoxItem Content="常に最前面" Tag="Always"/>
                    <ComboBoxItem Content="再生中のみ最前面" Tag="PlayingOnly"/>
                    <ComboBoxItem Content="駅停車中のみ最前面" Tag="AtStationOnly"/>
                    <ComboBoxItem Content="最前面にしない" Tag="None"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- キーボードショートカット設定 -->
        <GroupBox Header="キーボード設定" Grid.Row="4" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox x:Name="EnableKeyboardCheckBox"
                          Content="キーボード入力を有効にする (スペースキー)"
                          IsChecked="True"/>
            </StackPanel>
        </GroupBox>

        <!-- ログ表示エリア -->
        <GroupBox Header="ログ" Grid.Row="5" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock"
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="10"
                           Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"
                    Click="OnOkClick"
                    Width="80" Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="キャンセル"
                    Click="OnCancelClick"
                    Width="80" Height="30"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
