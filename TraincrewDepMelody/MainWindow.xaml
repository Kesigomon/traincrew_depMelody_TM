<Window x:Class="TraincrewDepMelody.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraincrewDepMelody"
        mc:Ignorable="d"
        Title="乗降促進アプリ" Height="350" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize">
    <Grid x:Name="MainGrid">
        <!-- 丸いボタン -->
        <Ellipse x:Name="MainButton"
                 Width="300" Height="300"
                 Fill="#FF4CAF50"
                 Stroke="#FF388E3C"
                 StrokeThickness="5"
                 Cursor="Hand"
                 MouseDown="OnButtonMouseDown"
                 MouseUp="OnButtonMouseUp">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Ellipse.Effect>
            <!-- 右クリックメニュー -->
            <Ellipse.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="設定" Click="OnSettingsClick"/>
                    <Separator/>
                    <MenuItem Header="終了" Click="OnExitClick"/>
                </ContextMenu>
            </Ellipse.ContextMenu>
        </Ellipse>

        <!-- ボタン上のテキスト -->
        <TextBlock Text="乗降促進"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"/>
    </Grid>
</Window>
